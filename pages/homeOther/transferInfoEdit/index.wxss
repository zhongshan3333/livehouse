/* 图片上传 */
.addImg{
  width: 137rpx;
height: 137rpx;
background: #F5F5F5;
border-radius: 4rpx;
margin-top: 15rpx;
display: flex;
align-items: center;
justify-content: center;
}
.addImg::before {
  content: '';
  position: absolute;
  width: 29rpx;
  border-top: 4rpx solid #C8C8C8;
}

.addImg::after {
  content: '';
  position: absolute;
  height: 29rpx;
  border-left: 4rpx solid #C8C8C8;
}
.spaceArea {
  height: 90px;
  padding-bottom: env(safe-area-inset-bottom);
  padding-bottom: constant(safe-area-inset-bottom);
}
.bottom {
  width:750rpx;
  height:200rpx;
  padding-top: 20rpx;
  padding-bottom: calc(70rpx + env(safe-area-inset-bottom));
  padding-bottom: calc(70rpx + constant(safe-area-inset-bottom));
  position: fixed;
  background: #EFF2F6;
  bottom: 0rpx
}